<%- include('partials/header', { title: 'Settings' }) %>

<style>
.glass-effect {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.fade-in-up {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.input-focus-effect {
  transition: all 0.3s ease;
}

.input-focus-effect:focus {
  transform: scale(1.02);
  box-shadow: 0 0 20px rgba(88, 101, 242, 0.2);
}

.btn-hover-effect {
  transition: all 0.3s ease;
}

.btn-hover-effect:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(88, 101, 242, 0.3);
}

.nav-tabs .nav-link {
  color: #fff;
  border: none;
  padding: 1rem 1.5rem;
  transition: all 0.3s ease;
}

.nav-tabs .nav-link:hover {
  background: rgba(255, 255, 255, 0.1);
}

.nav-tabs .nav-link.active {
  background: rgba(88, 101, 242, 0.2);
  border-bottom: 2px solid #5865F2;
}

.form-floating > .form-control {
  background: rgba(17, 24, 39, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: #fff;
}

.form-floating > .form-control:focus {
  background: rgba(17, 24, 39, 0.9);
  border-color: #5865F2;
}

.form-floating > label {
  color: rgba(255, 255, 255, 0.6);
}
</style>

<div class="container">
  <% if (success_msg != '') { %>
    <div class="alert glass-effect text-success border border-success fade-in-up mb-4" role="alert">
      <%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (error_msg != '') { %>
    <div class="alert glass-effect text-danger border border-danger fade-in-up mb-4" role="alert">
      <%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="row mb-4">
    <div class="col-lg-4">
      <div class="glass-effect rounded-xl p-6 fade-in-up">
        <div class="card-header bg-transparent border-0">
          <h5 class="mb-0 text-white"><i class="bi bi-robot"></i> Bot Status</h5>
        </div>
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <div class="status-indicator <%= botStatus === 'Online' ? 'bg-success' : 'bg-danger' %>" style="width: 12px; height: 12px; border-radius: 50%; margin-right: 8px;"></div>
            <span class="fs-5 fw-bold text-white"><%= botStatus %></span>
          </div>

          <div class="mb-2">
            <span class="text-muted">Username:</span> 
            <span class="fw-bold text-info"><%= botUsername %></span>
          </div>

          <div class="mb-2">
            <span class="text-muted">Ping:</span> 
            <span class="fw-bold text-warning"><%= botPing %> ms</span>
          </div>

          <div class="mb-2">
            <span class="text-muted">Uptime:</span> 
            <span class="fw-bold text-success" id="uptime">Calculating...</span>
          </div>

          <div class="d-grid gap-2 mt-4">
            <a href="/dashboard" class="btn btn-hover-effect btn-primary">
              <i class="bi bi-speedometer2"></i> Dashboard
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="glass-effect rounded-xl p-6 fade-in-up">
        <div class="card-header bg-transparent border-0">
          <h5 class="mb-0 text-white"><i class="bi bi-sliders"></i> Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-4">
              <button class="btn btn-hover-effect btn-outline-primary w-100" type="button" data-bs-toggle="modal" data-bs-target="#stockModal">
                <i class="bi bi-box-seam"></i> Manage Stock
              </button>
            </div>
            <div class="col-md-4">
              <button class="btn btn-hover-effect btn-outline-warning w-100" type="button" data-bs-toggle="modal" data-bs-target="#channelsModal">
                <i class="bi bi-hash"></i> Channels Setup
              </button>
            </div>
            <div class="col-md-4">
              <button class="btn btn-hover-effect btn-outline-danger w-100" type="button" data-bs-toggle="modal" data-bs-target="#rolesModal">
                <i class="bi bi-person-badge"></i> Roles Setup
              </button>
            </div>
            <div class="col-md-4">
              <button class="btn btn-hover-effect btn-outline-success w-100" type="button" data-bs-toggle="modal" data-bs-target="#prefixesModal">
                <i class="bi bi-terminal"></i> Command Prefixes
              </button>
            </div>
            <div class="col-md-4">
              <button class="btn btn-hover-effect btn-outline-info w-100" type="button" data-bs-toggle="modal" data-bs-target="#featuresModal">
                <i class="bi bi-gear-wide-connected"></i> Feature Settings
              </button>
            </div>
            <div class="col-md-4">
              <button class="btn btn-hover-effect btn-outline-secondary w-100" type="button" data-bs-toggle="modal" data-bs-target="#backupModal">
                <i class="bi bi-cloud-arrow-down"></i> Backup/Restore
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Settings Section -->
  <div class="row">
    <div class="col-12">
      <div class="glass-effect rounded-xl p-6 fade-in-up">
        <div class="card-header bg-transparent border-0">
          <ul class="nav nav-tabs card-header-tabs" id="settingsTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab">
                <i class="bi bi-gear"></i> General
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="channels-tab" data-bs-toggle="tab" data-bs-target="#channels" type="button" role="tab">
                <i class="bi bi-hash"></i> Channels
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="roles-tab" data-bs-toggle="tab" data-bs-target="#roles" type="button" role="tab">
                <i class="bi bi-person-badge"></i> Roles
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="commands-tab" data-bs-toggle="tab" data-bs-target="#commands" type="button" role="tab">
                <i class="bi bi-terminal"></i> Commands
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="features-tab" data-bs-toggle="tab" data-bs-target="#features" type="button" role="tab">
                <i class="bi bi-toggles"></i> Features
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="appearance-tab" data-bs-toggle="tab" data-bs-target="#appearance" type="button" role="tab">
                <i class="bi bi-palette"></i> Appearance
              </button>
            </li>
          </ul>
        </div>

        <div class="card-body mt-4">
          <div class="tab-content" id="settingsTabContent">
            <!-- General Tab -->
            <div class="tab-pane fade show active" id="general" role="tabpanel">
              <form action="/settings/general" method="POST">
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="botToken" name="botToken" 
                        placeholder="Bot Token" value="<%= config.token ? '••••••••••••••••••••••••••' : '' %>">
                      <label for="botToken">Bot Token</label>
                      <div class="form-text text-muted">The Discord bot token. Be careful with this!</div>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="genCooldown" name="genCooldown" 
                        value="<%= config.genCooldown %>" placeholder="Gen Cooldown">
                      <label for="genCooldown">Gen Cooldown (minutes)</label>
                      <div class="form-text text-muted">Cooldown period between account generation commands.</div>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="egenCooldownHours" name="egenCooldownHours" 
                        value="<%= config.egenCooldownHours %>" placeholder="Extreme Gen Cooldown">
                      <label for="egenCooldownHours">Extreme Gen Cooldown (hours)</label>
                      <div class="form-text text-muted">Cooldown period for extreme account generation.</div>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="gif" name="gif" 
                        value="<%= config.gif %>" placeholder="Footer GIF URL">
                      <label for="gif">Footer GIF URL</label>
                      <div class="form-text text-muted">GIF shown in the footer of embeds.</div>
                    </div>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-md-12">
                    <label class="form-label text-white">Admin User IDs</label>
                    <div class="glass-effect p-4 rounded-lg">
                      <% config.adminUserIds.forEach((id, index) => { %>
                        <div class="d-flex align-items-center mb-2">
                          <input type="text" class="form-control form-control-sm input-focus-effect me-2" 
                            name="adminUserIds[]" value="<%= id %>">
                          <button type="button" class="btn btn-sm btn-danger remove-admin-id">
                            <i class="bi bi-trash"></i>
                          </button>
                        </div>
                      <% }); %>
                      <div class="mt-2">
                        <button type="button" class="btn btn-sm btn-success" id="addAdminIdBtn">
                          <i class="bi bi-plus-circle"></i> Add Admin ID
                        </button>
                      </div>
                    </div>
                    <div class="form-text text-muted">Discord user IDs who have full admin access to bot commands.</div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-12">
                    <button type="submit" class="btn btn-hover-effect btn-success">
                      <i class="bi bi-save"></i> Save General Settings
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- Channels Tab -->
            <div class="tab-pane fade" id="channels" role="tabpanel">
              <form action="/settings/channels" method="POST">
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="welcomeChannelId" name="welcomeChannelId" 
                        value="<%= config.welcomeChannelId %>" placeholder="Welcome Channel ID">
                      <label for="welcomeChannelId">Welcome Channel ID</label>
                      <div class="form-text text-muted">Channel where welcome messages are sent.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="genChannel" name="genChannel" 
                        value="<%= config.genChannel %>" placeholder="Gen Channel ID">
                      <label for="genChannel">Gen Channel ID</label>
                      <div class="form-text text-muted">Channel where .gen commands can be used.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="fgenChannel" name="fgenChannel" 
                        value="<%= config.fgenChannel %>" placeholder="Free Gen Channel ID">
                      <label for="fgenChannel">Free Gen Channel ID</label>
                      <div class="form-text text-muted">Channel where .fgen commands can be used.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="bgenChannel" name="bgenChannel" 
                        value="<%= config.bgenChannel %>" placeholder="Basic Gen Channel ID">
                      <label for="bgenChannel">Basic Gen Channel ID</label>
                      <div class="form-text text-muted">Channel where .bgen commands can be used.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="egenChannel" name="egenChannel" 
                        value="<%= config.egenChannel %>" placeholder="Extreme Gen Channel ID">
                      <label for="egenChannel">Extreme Gen Channel ID</label>
                      <div class="form-text text-muted">Channel where .egen commands can be used.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="cgenChannel" name="cgenChannel" 
                        value="<%= config.cgenChannel %>" placeholder="Cookie Gen Channel ID">
                      <label for="cgenChannel">Cookie Gen Channel ID</label>
                      <div class="form-text text-muted">Channel where .cgen commands can be used.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="vouchChannelId" name="vouchChannelId" 
                        value="<%= config.vouchChannelId %>" placeholder="Vouch Channel ID">
                      <label for="vouchChannelId">Vouch Channel ID</label>
                      <div class="form-text text-muted">Channel where vouches are displayed.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="logsChannelId" name="logsChannelId" 
                        value="<%= config.logsChannelId %>" placeholder="Logs Channel ID">
                      <label for="logsChannelId">Logs Channel ID</label>
                      <div class="form-text text-muted">Channel where bot logs are sent.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="dropChannelId" name="dropChannelId" 
                        value="<%= config.dropChannelId %>" placeholder="Drop Channel ID">
                      <label for="dropChannelId">Drop Channel ID</label>
                      <div class="form-text text-muted">Channel where account drops happen.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="stockid" name="stockid" 
                        value="<%= config.stockid %>" placeholder="Stock Channel ID">
                      <label for="stockid">Stock Channel ID</label>
                      <div class="form-text text-muted">Channel where stock information is displayed.</div>
                    </div>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-12">
                    <button type="submit" class="btn btn-hover-effect btn-warning">
                      <i class="bi bi-save"></i> Save Channel Settings
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- Roles Tab -->
            <div class="tab-pane fade" id="roles" role="tabpanel">
              <form action="/settings/roles" method="POST">
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="providorRole" name="providorRole" 
                        value="<%= config.providorRole %>" placeholder="Provider Role ID">
                      <label for="providorRole">Provider Role ID</label>
                      <div class="form-text text-muted">Role for account providers.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="dropRoleId" name="dropRoleId" 
                        value="<%= config.dropRoleId %>" placeholder="Drop Role ID">
                      <label for="dropRoleId">Drop Role ID</label>
                      <div class="form-text text-muted">Role pinged for account drops.</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="restockroleid" name="restockroleid" 
                        value="<%= config.restockroleid %>" placeholder="Restock Role ID">
                      <label for="restockroleid">Restock Role ID</label>
                      <div class="form-text text-muted">Role pinged for restocks.</div>
                    </div>
                  </div>
                </div>
                
                <h6 class="mb-3 mt-4 text-info">Staff Role IDs</h6>
                <div class="row mb-3">
                  <div class="col-md-12">
                    <div class="glass-effect p-4 rounded-lg">
                      <% config.staffRoleIds.forEach((id, index) => { %>
                        <div class="d-flex align-items-center mb-2">
                          <input type="text" class="form-control form-control-sm input-focus-effect me-2" name="staffRoleIds[]" value="<%= id %>">
                          <button type="button" class="btn btn-sm btn-danger remove-role-id"><i class="bi bi-trash"></i></button>
                        </div>
                      <% }); %>
                      <div class="mt-2">
                        <button type="button" class="btn btn-sm btn-success" id="addStaffRoleBtn">
                          <i class="bi bi-plus-circle"></i> Add Staff Role
                        </button>
                      </div>
                    </div>
                    <div class="form-text text-muted">Discord role IDs for staff members.</div>
                  </div>
                </div>
                
                <h6 class="mb-3 mt-4 text-info">Cookie Send Roles</h6>
                <div class="row mb-3">
                  <div class="col-md-12">
                    <div class="glass-effect p-4 rounded-lg">
                      <% config.cookiesendroles.forEach((id, index) => { %>
                        <div class="d-flex align-items-center mb-2">
                          <input type="text" class="form-control form-control-sm input-focus-effect me-2" name="cookiesendroles[]" value="<%= id %>">
                          <button type="button" class="btn btn-sm btn-danger remove-role-id"><i class="bi bi-trash"></i></button>
                        </div>
                      <% }); %>
                      <div class="mt-2">
                        <button type="button" class="btn btn-sm btn-success" id="addCookieRoleBtn">
                          <i class="bi bi-plus-circle"></i> Add Cookie Role
                        </button>
                      </div>
                    </div>
                    <div class="form-text text-muted">Roles allowed to send cookies.</div>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-12">
                    <button type="submit" class="btn btn-hover-effect btn-danger">
                      <i class="bi bi-save"></i> Save Role Settings
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- Commands Tab -->
            <div class="tab-pane fade" id="commands" role="tabpanel">
              <form action="/settings/commands" method="POST">
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="mainPrefix" name="mainPrefix" 
                        value="<%= config.mainPrefix %>" placeholder="Main Prefix">
                      <label for="mainPrefix">Main Prefix</label>
                      <div class="form-text text-muted">The main prefix for bot commands (e.g., .help).</div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="helpPrefix" name="helpPrefix" 
                        value="<%= config.helpPrefix %>" placeholder="Help Prefix">
                      <label for="helpPrefix">Help Prefix</label>
                      <div class="form-text text-muted">The prefix used for help commands (e.g., =help).</div>
                    </div>
                  </div>                  
                  <div class="col-md-4">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="vouchPrefix" name="vouchPrefix" 
                        value="<%= config.vouchPrefix %>" placeholder="Vouch Prefix">
                      <label for="vouchPrefix">Vouch Prefix</label>
                      <div class="form-text text-muted">The prefix for vouch commands.</div>
                    </div>
                  </div>                  
                  <div class="col-md-4">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="negVouchPrefix" name="negVouchPrefix" 
                        value="<%= config.negVouchPrefix %>" placeholder="Negative Vouch Prefix">
                      <label for="negVouchPrefix">Negative Vouch Prefix</label>
                      <div class="form-text text-muted">The prefix for negative vouch commands.</div>
                    </div>
                  </div>                  
                  <div class="col-md-4">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="extremePrefix" name="extremePrefix" 
                        value="<%= config.extremePrefix %>" placeholder="Extreme Prefix">
                      <label for="extremePrefix">Extreme Prefix</label>
                      <div class="form-text text-muted">The prefix for extreme commands.</div>
                    </div>
                  </div>                  
                  <div class="col-md-4">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="basicPrefix" name="basicPrefix" 
                        value="<%= config.basicPrefix %>" placeholder="Basic Prefix">
                      <label for="basicPrefix">Basic Prefix</label>
                      <div class="form-text text-muted">The prefix for basic commands.</div>
                    </div>
                  </div>                  
                  <div class="col-md-4">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="freePrefix" name="freePrefix" 
                        value="<%= config.freePrefix %>" placeholder="Free Prefix">
                      <label for="freePrefix">Free Prefix</label>
                      <div class="form-text text-muted">The prefix for free tier commands.</div>
                    </div>
                  </div>                  
                  <div class="col-md-4">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control input-focus-effect" id="cookiePrefix" name="cookiePrefix" 
                        value="<%= config.cookiePrefix %>" placeholder="Cookie Prefix">
                      <label for="cookiePrefix">Cookie Prefix</label>
                      <div class="form-text text-muted">The prefix for cookie commands.</div>
                    </div>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-12">
                    <button type="submit" class="btn btn-hover-effect btn-primary">
                      <i class="bi bi-save"></i> Save Command Settings
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- Features Tab -->
            <div class="tab-pane fade" id="features" role="tabpanel">
              <form action="/settings/features" method="POST">
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="card bg-dark mb-3">
                      <div class="card-body">
                        <h5 class="card-title text-primary">Command Error Messages</h5>
                        <div class="form-check form-switch mb-3">
                          <input class="form-check-input" type="checkbox" id="error_message" name="error_message" <%= config.command.error_message ? 'checked' : '' %>>
                          <label class="form-check-label" for="error_message">Show Error Messages</label>
                          <div class="form-text text-muted">Show error messages when commands fail.</div>
                        </div>                        
                        <div class="form-check form-switch">
                          <input class="form-check-input" type="checkbox" id="notfound_message" name="notfound_message" <%= config.command.notfound_message ? 'checked' : '' %>>
                          <label class="form-check-label" for="notfound_message">Show Command Not Found Messages</label>
                          <div class="form-text text-muted">Show messages when unknown commands are used.</div>
                        </div>
                      </div>
                    </div>
                  </div>                  
                  <div class="col-md-6">
                    <div class="card bg-dark mb-3">
                      <div class="card-body">
                        <h5 class="card-title text-primary">Drop System</h5>
                        <div class="form-check form-switch">
                          <input class="form-check-input" type="checkbox" id="dropSessionActive" name="dropSessionActive" <%= config.dropSessionActive ? 'checked' : '' %>>
                          <label class="form-check-label" for="dropSessionActive">Activate Drops</label>
                          <div class="form-text text-muted">Enable the account drop system.</div>
                        </div>
                      </div>
